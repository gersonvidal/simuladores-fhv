{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@actuadores/*": ["actuadores/*"],
      "@factories/*": ["factories/*"],
      "@sensores/*": ["sensores/*"]
    }
  },
  "include": ["src/**/*", "main.ts", "interfaces/**/*", "actuadores/**/*", "sensores/**/*"],
  "exclude": ["node_modules"]
}